<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="suite" parallel="methods" thread-count="3">
    <listeners>
        <listener class-name="com.solvd.testutil.ScreenshotListener"/>
    </listeners>

    <test name="web tests chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.solvd.SearchFunctionalityTest"/>
            <class name="com.solvd.ProductCardFunctionalityTest"/>
            <class name="com.solvd.CartFunctionalityTest"/>
        </classes>
    </test>

    <test name="web tests firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.solvd.SearchFunctionalityTest"/>
            <class name="com.solvd.ProductCardFunctionalityTest"/>
            <class name="com.solvd.CartFunctionalityTest"/>
        </classes>
    </test>

</suite>

